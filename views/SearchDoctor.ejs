        };
    
      


        

      // Display doctors Function
      function displayDoctors(doctors) {
        const SearchDoctor = document.getElementById(
          "SearchDoctor"
        );
        SearchDoctor.innerHTML = ""; // Clear previous results

        if (doctors.length === 0) {
          SearchDoctor.innerHTML = "No doctors found.";
          return;
        }

        const doctorList = document.createElement("ul");
        doctors.forEach((doctor) => {
          const listItem = document.createElement("li");
          listItem.textContent = `First Name: ${doctor.FirstName}, Last Name: ${doctor.LastName}, Email: ${doctor.Email}, Hourly Rate: ${doctor.HourlyRate}, Specialty: ${doctor.Specialty}`;
          doctorList.appendChild(listItem);
        });

        SearchDoctor.appendChild(doctorList);
      }
    </script>
  </body>
</html>
