<!DOCTYPE html>
<html>
  <head>
    <title>Search Doctor</title>
  </head>
  <body>
    <h1>Search Doctor</h1>

    <!-- Filter by Doctor -->
    <label for="doctorFilter">Search by Doctor name:</label>
    <input type="text" id="doctorFilter" />

    <!-- Get doctors by name Button -->
    <button id="Search">Search</button>


    <!-- Display Prescription Results -->
    <div id="SearchDoctor">
      <!-- Results will be displayed here -->
    </div>

    <script>
     document.getElementById("Search").onclick = function() {
          const name = document.getElementById("doctorFilter").value
